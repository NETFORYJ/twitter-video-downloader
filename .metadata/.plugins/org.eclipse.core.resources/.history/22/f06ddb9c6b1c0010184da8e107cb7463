  <div class="container">
    <h1>Twitter Video Downloader üì•</h1>
    <div class="input-wrapper">
      <input type="text" id="videoUrl" placeholder="Paste Twitter video URL..." required>
    </div>
    <button onclick="fetchVideo()">Download</button>

    <img id="thumbnail" src="" alt="Thumbnail">
    <div id="result"></div>
  </div>

  <script>
    async function fetchVideo() {
      const videoUrl = document.getElementById("videoUrl").value.trim();
      const thumbnail = document.getElementById("thumbnail");
      const result = document.getElementById("result");

      if (!videoUrl) {
        alert("Please enter a video URL");
        return;
      }

      result.innerText = "Fetching video info...";

      try {
        // ‚ú® Replace with actual API that works (Example below)
        const apiEndpoint = `https://ssstwitter.com/api?url=${encodeURIComponent(videoUrl)}`;

        const response = await fetch(apiEndpoint);
        const data = await response.json();

        if (data.downloadUrl) {
          thumbnail.src = data.thumbnailUrl || "";
          if (data.thumbnailUrl) {
            thumbnail.style.display = "block";
          } else {
            thumbnail.style.display = "none";
          }

          result.innerHTML = `<a href="${data.downloadUrl}" class="button" download>Download Video üé¨</a>`;
        } else {
          result.innerText = "‚ùå Could not fetch video. Try again.";
          thumbnail.style.display = "none";
        }
      } catch (error) {
        console.error("Error:", error);
        result.innerText = "‚ùå Failed to fetch video info.";
        thumbnail.style.display = "none";
      }
    }
  </script>
