  <script>
    const input = document.getElementById("videoUrl");
    const actionBtn = document.getElementById("actionBtn");
    const form = document.getElementById("downloadForm");

    function isValidUrl(url) {
      const pattern = /^https?:\/\/(www\.)?(twitter\.com|x\.com)\/[a-zA-Z0-9_]+\/status\/\d+/i;
      return pattern.test(url);
    }

 // Update the thumbnail fetching part of your existing code:
    input.addEventListener("input", () => {
      const videoUrl = input.value.trim();
      const thumbnail = document.getElementById("thumbnail");
      const result = document.getElementById("result");

      if (!videoUrl) {
        thumbnail.style.display = "none";
        actionBtn.textContent = "ðŸ“‹";
        result.innerText = "";
        return;
      }

      actionBtn.textContent = "âŒ";

      if (!isValidUrl(videoUrl)) {
        result.innerText = "âŒ Invalid URL format!";
        result.style.color = "red";
        thumbnail.style.display = "none";
        return;
      }

      result.innerText = "";
      thumbnail.style.display = "none"; // Hide until we have the thumbnail

      // Add loading indicator
      thumbnail.src = "";
      thumbnail.alt = "Loading thumbnail...";

      fetch(`/api/thumbnail?videoUrl=${encodeURIComponent(videoUrl)}`)
        .then((res) => {
          if (!res.ok) throw new Error(`HTTP error! status: ${res.status}`);
          return res.json();
        })
        .then((data) => {
          if (data.thumbnail) {
            thumbnail.src = data.thumbnail;
            thumbnail.style.display = "block";
            thumbnail.onerror = () => {
              // If thumbnail fails to load, show a placeholder
              thumbnail.src = "/images/default-thumbnail.jpg";
            };
          } else {
            thumbnail.src = "/images/default-thumbnail.jpg";
            thumbnail.style.display = "block";
          }
        })
        .catch((error) => {
          console.error("Thumbnail error:", error);
          thumbnail.src = "/images/default-thumbnail.jpg";
          thumbnail.style.display = "block";
        });
    });
  </script>

