  <div class="container">
    <h1>Twitter Video Downloader ðŸš€</h1>
    <form id="downloadForm">
      <div class="input-wrapper">
        <input type="text" id="videoUrl" placeholder="Paste video URL here..." required aria-label="Video URL">
        <button type="button" id="actionBtn" aria-label="Paste or clear URL">ðŸ“‹</button>
      </div>
      <button type="submit">Download</button>
    </form>
    <img id="thumbnail" src="" alt="Thumbnail Preview">
    <p id="result"></p>
    <div id="progress-container">
      <div id="progress-bar"></div>
    </div>
    <a id="downloadLink" href="#" download>ðŸ“¥ Download Video</a>
